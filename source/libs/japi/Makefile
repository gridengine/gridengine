# Variable definitions for targets to build

JAPILIB_DIR   = $(SDIR)/libs/japi
CLASSES_DIR   = $(SDIR)/classes

JAPILIB 	    = libjapi$(LIBEXT)
JAPILIB_SRC   = japi.c
JAPILIB_OBJS  = $(JAPILIB_SRC:.c=.o)

DRMAALIB      = libdrmaa$(SHAREDEXT)
DRMAALIB_SRC  = drmaa.c
DRMAALIB_OBJS = $(DRMAALIB_SRC:.c=.o) $(JAPILIB_OBJS) $(JAPI_DEPEND_OBJS) $(EVCLIB_OBJS) \
                $(GDILIB_OBJS) $(SGEOBJLIB_OBJS) $(SGEOBJDLIB_OBJS) $(SECLIB_OBJS) \
                $(CULLLIB_OBJS) $(RMONLIB_OBJS) $(COMMLIB_OBJS) \
                $(COMMLISTSLIB_OBJS) $(UTILIB_DRMAA_OBJS) $(LCKLIB_OBJS)

JDRMAALIB     = $(DRMAALIB)
JDRMAALIB_SRC = com_sun_grid_drmaa_SGESession.c
JDRMAALIB_OBJS = $(JDRMAALIB_SRC:.c=.o) $(DRMAALIB_OBJS)

JAPI_ALL      = japilib drmaalib test_drmaa example howto1 howto2 howto2_1 \
								howto3

JAPI_ADD_SRC = parse_job_cull.c parse_qsub.c read_defaults.c sge_options.c

JAPI_ADD_OBJS = $(JAPI_ADD_SRC:.c=.o)
JAPI_ADD_LIBS = -lsched -levc -lgdi -lsgeobj -lsgeobjd \
				    $(SECLIB) $(KRBLIB) -lcull -lcomm -lcommlists \
                -luti -lrmon -llck $(DLLIB)
                
JAPI_DEPEND_OBJS = $(JAPI_ADD_OBJS)

JAPI_DEPEND_LIBS = $(SCHEDLIB) $(EVCLIB) $(GDILIB) $(SGEOBJLIB) $(SGEOBJDLIB) \
                   $(CULLLIB) $(COMMLIB) $(COMMLISTSLIB) \
                   $(UTILIB) $(RMONLIB) $(LCKLIB)

japi_all: $(JAPI_ALL)

###############################################################################
# global rules: all, clean, depend, messages
###############################################################################
japilib: $(JAPILIB)
drmaalib: $(DRMAALIB)
	
japilib_clean: 
	$(RM) $(JAPI_ALL) $(JAPILIB_OBJS) $(DRMAA_DEPEND_OBJS) libjapi.a libjapi$(SHAREDEXT) $(DRMAALIB_OBJS) libdrmaa.a libdrmaa$(SHAREDEXT) test_drmaa.o test_drmaa example.o example sge_sub_object.c

japilib_depend:
	$(DEPEND) -f$(JAPILIB_DIR)/japi_dependencies $(JAPILIB_DIR)/*.c

japilib_messages:
	@echo Creating $@
	@for i in `ls $(JAPILIB_DIR)/*.c`; do \
	   $(CC) $(CFLAGS) -DEXTRACT_MESSAGES -E $$i | $(XGETTEXT) - ;\
	done

###############################################################################
# rules to build library
###############################################################################
libjapi.a:  $(JAPILIB_OBJS) $(JAPI_DEPEND_OBJS)
	$(AR) $(ARFLAGS) libjapi.a $(JAPILIB_OBJS) $(JAPI_DEPEND_OBJS)
	$(RANLIB) libjapi.a 

libjapi$(SHAREDEXT): $(JAPILIB_OBJS) $(JAPI_DEPEND_OBJS) $(JAPI_DEPEND_LIBS)
	$(SHAREDLD) $(SHARED_LFLAGS) -o libjapi$(SHAREDEXT) $(JAPILIB_OBJS) $(JAPI_DEPEND_OBJS) $(JAPI_ADD_LIBS)

libdrmaa$(SHAREDEXT): $(DRMAALIB_OBJS)
	$(SHAREDLD) $(SHARED_LFLAGS) -o libdrmaa$(SHAREDEXT) $(DRMAALIB_OBJS) $(SLIBS) $(LIBS) -lc

###############################################################################
# include dependencies for object files generated by sge_depend
###############################################################################
include $(JAPILIB_DIR)/japi_dependencies

###############################################################################
# include examples from the howto
###############################################################################
include $(JAPILIB_DIR)/howto/Makefile

###############################################################################
# rules to build DRMAA Java binding
###############################################################################
jdrmaa: $(JDRMAALIB_OBJS) $(DRMAALIB) $(DRMAALIB_OBJS)
	@rm $(DRMAALIB)
	$(SHAREDLD) $(SHARED_LFLAGS) -o libdrmaa$(SHAREDEXT) $(JDRMAALIB_OBJS) $(DRMAALIB_OBJS) $(SLIBS) $(LIBS) -lc
	$(JAVA_HOME)/bin/javac -classpath $(CLASSES_DIR) -d $(CLASSES_DIR) $(CLASSES_DIR)/org/ggf/drmaa/*.java $(CLASSES_DIR)/com/sun/grid/drmaa/*.java
	@cd $(CLASSES_DIR); $(JAVA_HOME)/bin/jar cvf $(SOURCE)/$(COMPILE_ARCH)/drmaa.jar org/ggf/drmaa/*.class com/sun/grid/drmaa/*.class; cd $(SOURCE)/$(COMPILE_ARCH)

###############################################################################
# rules to build object codes
###############################################################################
drmaa.o: $(JAPILIB_DIR)/drmaa.c
	$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(JAPILIB_DIR)/drmaa.c

japi.o: $(JAPILIB_DIR)/japi.c
	$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(JAPILIB_DIR)/japi.c

com_sun_grid_drmaa_SGESession.o: $(JAPILIB_DIR)/com_sun_grid_drmaa_SGESession.c
	$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(JAPILIB_DIR)/com_sun_grid_drmaa_SGESession.c

#---------------------------------------------------------------------

test_drmaa: test_drmaa.o $(DRMAALIB)
	$(LD_WRAPPER) $(CC) -o $@ test_drmaa.o $(LFLAGS) -ldrmaa $(LIBS) $(SLIBS) $(DLLIB)

test_drmaa.o: $(JAPILIB_DIR)/test_drmaa.c
	$(CC) $(CFLAGS) -c $(JAPILIB_DIR)/test_drmaa.c

example: example.o $(DRMAALIB)
	$(LD_WRAPPER) $(CC) $(CFLAGS) -o example example.o $(LFLAGS) -ldrmaa $(LIBS) $(SLIBS) $(DLLIB)

example.o: $(JAPILIB_DIR)/example.c
	$(CC) $(CFLAGS) -c $(JAPILIB_DIR)/example.c

