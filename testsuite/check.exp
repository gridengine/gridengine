#****** check/do_wait() ********************************************************
#  NAME
#     do_wait() -- wait for x seconds (and print .)
#
#  SYNOPSIS
#     do_wait { time } 
#
#  INPUTS
#     time - time in seconds
#
#*******************************************************************************
proc do_wait { time } {

   set timestart [ timestamp ]
   while { 1 } {
       if { [ expr ( [ timestamp  ] - $timestart ) ] >= $time } {
         puts ""
         return
       }
       puts -nonewline "."
       flush stdout
       sleep 1
   }
}

