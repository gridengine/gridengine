# Variable definitions for targets to build

JAPILIB_DIR   = $(SDIR)/libs/japi
CLASSES_DIR   = $(SDIR)/classes/src

JAPILIB       = libjapi$(LIBEXT)
JAPILIB_SRC   = japi.c
JAPILIB_OBJS  = $(JAPILIB_SRC:.c=.o)

DRMAALIB         = libdrmaa$(SHAREDEXT)
DRMAALIB_SRC_NJ  = drmaa.c
DRMAALIB_SRC_ALL = $(DRMAALIB_SRC_NJ) com_sun_grid_drmaa_SessionImpl.c
DRMAALIB_OBJS    = $(JAPILIB_OBJS) $(JAPI_ADD_OBJS) $(EVCLIB_OBJS) \
                   $(GDILIB_OBJS) $(SGEOBJLIB_OBJS) $(SGEOBJDLIB_OBJS) $(SECLIB_OBJS) \
                   $(CULLLIB_OBJS) $(RMONLIB_OBJS) $(COMMLIB_OBJS) \
                   $(COMMLISTSLIB_OBJS) $(UTILIB_DRMAA_OBJS) $(LCKLIB_OBJS)
DRMAALIB_OBJS_ALL = $(DRMAALIB_SRC_ALL:.c=.o) $(DRMAALIB_OBJS)
DRMAALIB_OBJS_NJ  = $(DRMAALIB_SRC_NJ:.c=.o) $(DRMAALIB_OBJS)

JAPI_ADD_SRC = parse_job_cull.c parse_qsub.c read_defaults.c sge_options.c

JAPI_ADD_OBJS = $(JAPI_ADD_SRC:.c=.o)
JAPI_ADD_LIBS = -levc -lgdi -lsgeobj -lsgeobjd \
                $(SECLIB) $(KRBLIB) -lcull -lcomm -lcommlists \
                -luti -lrmon -llck $(DLLIB)
                
JAPI_DEPEND_OBJS = $(JAPI_ADD_OBJS)

JAPI_DEPEND_LIBS = $(EVCLIB) $(GDILIB) $(SGEOBJLIB) $(SGEOBJDLIB) \
                   $(CULLLIB) $(COMMLIB) $(COMMLISTSLIB) \
                   $(UTILIB) $(RMONLIB) $(LCKLIB)

###############################################################################
# global rules: all, clean, depend, messages
###############################################################################
drmaa_all: drmaalib japilib drmaa_extras
	@set DRMAA_OBJS = $(DRMAALIB_OBJS_J)

drmaa_clean: japi_clean drmaa_extras_clean
	$(RM) $(DRMAALIB_OBJS) libdrmaa.a libdrmaa$(SHAREDEXT)

drmaa_extras_clean: drmaa_howto_clean
	$(RM) test_drmaa.o test_drmaa example.o example test_drmaa_sync \
              test_drmaa_sync.o

japilib: $(JAPILIB)
drmaalib: $(DRMAALIB)

drmaa_extras: drmaa_howto_all test_drmaa example test_drmaa_sync
	
japi_clean:
	$(RM) $(JAPILIB_OBJS) libjapi.a libjapi$(SHAREDEXT)

drmaa_depend:
	$(DEPEND) -f$(JAPILIB_DIR)/drmaa_dependencies $(JAPILIB_DIR)/*.c

drmaa_messages:
	@echo Creating $@
	@for i in `ls $(JAPILIB_DIR)/*.c`; do \
	   $(CC) $(CFLAGS) -DEXTRACT_MESSAGES -E $$i | $(XGETTEXT) - ;\
	done

###############################################################################
# rules to build library
###############################################################################
libjapi.a:  $(JAPILIB_OBJS) $(JAPI_DEPEND_OBJS)
	$(AR) $(ARFLAGS) libjapi.a $(JAPILIB_OBJS) $(JAPI_DEPEND_OBJS)
	$(RANLIB) libjapi.a 

libjapi$(SHAREDEXT): $(JAPILIB_OBJS) $(JAPI_DEPEND_OBJS) $(JAPI_DEPEND_LIBS)
	$(SHAREDLD) $(SHARED_LFLAGS) -o libjapi$(SHAREDEXT) $(JAPILIB_OBJS) $(JAPI_DEPEND_OBJS) $(JAPI_ADD_LIBS)

libdrmaa$(SHAREDEXT): $(DRMAALIB_OBJS_$(DRMAA_TARGET))
	$(SHAREDLD) $(SHARED_LFLAGS) -o libdrmaa$(SHAREDEXT) $(DRMAALIB_OBJS_$(DRMAA_TARGET)) $(SLIBS) $(LIBS) -lc

###############################################################################
# include dependencies for object files generated by sge_depend
###############################################################################
include $(JAPILIB_DIR)/drmaa_dependencies

###############################################################################
# include examples from the howto
###############################################################################
include $(JAPILIB_DIR)/howto/Makefile

###############################################################################
# rules to build object codes
###############################################################################
drmaa.o: $(JAPILIB_DIR)/drmaa.c
	$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(JAPILIB_DIR)/drmaa.c

japi.o: $(JAPILIB_DIR)/japi.c
	$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(JAPILIB_DIR)/japi.c

com_sun_grid_drmaa_SessionImpl.o: $(CLASSES_DIR)/com_sun_grid_drmaa_SessionImpl.c
	$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(CLASSES_DIR)/com_sun_grid_drmaa_SessionImpl.c

#---------------------------------------------------------------------

test_drmaa: test_drmaa.o
	$(LD_WRAPPER) $(CC) -o $@ test_drmaa.o $(LFLAGS) -ldrmaa $(LIBS) $(SLIBS) $(DLLIB)

test_drmaa.o: $(JAPILIB_DIR)/test_drmaa.c
	$(CC) $(CFLAGS) -c $(JAPILIB_DIR)/test_drmaa.c

test_drmaa_sync: test_drmaa_sync.o
	$(LD_WRAPPER) $(CC) -o $@ test_drmaa_sync.o $(LFLAGS) -ldrmaa $(LIBS) $(SLIBS) $(DLLIB)

test_drmaa_sync.o: $(JAPILIB_DIR)/test_drmaa_sync.c
	$(CC) $(CFLAGS) -c $(JAPILIB_DIR)/test_drmaa_sync.c

example: example.o
	$(LD_WRAPPER) $(CC) $(CFLAGS) -o example example.o $(LFLAGS) -ldrmaa $(LIBS) $(SLIBS) $(DLLIB)

example.o: $(JAPILIB_DIR)/example.c
	$(CC) $(CFLAGS) -c $(JAPILIB_DIR)/example.c

