	$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(SCHEDLIB_DIR)/valid_queue_user.c

load_correction.o: $(SCHEDLIB_DIR)/load_correction.c
	$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(SCHEDLIB_DIR)/load_correction.c

suspend_thresholds.o: $(SCHEDLIB_DIR)/suspend_thresholds.c
	$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(SCHEDLIB_DIR)/suspend_thresholds.c

schedd_monitor.o: $(SCHEDLIB_DIR)/schedd_monitor.c
	$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(SCHEDLIB_DIR)/schedd_monitor.c

slots_used.o: $(SCHEDLIB_DIR)/slots_used.c
	$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(SCHEDLIB_DIR)/slots_used.c

sgeee.o: $(SCHEDLIB_DIR)/sgeee.c
