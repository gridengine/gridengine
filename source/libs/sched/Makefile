SCHEDLIB_DIR = $(SDIR)/libs/sched

SCHEDLIB    = libsched$(LIBEXT)
 
SCHEDLIB_SRC = sge_select_queue.c \
              valid_queue_user.c \
              sort_hosts.c \
              sge_complex_schedd.c \
              sge_job_schedd.c \
              sge_range_schedd.c \
              sge_pe_schedd.c \
              debit.c \
              subordinate_schedd.c \
              slots_used.c \
              sge_static_load.c \
              load_correction.c \
              suspend_thresholds.c \
              schedd_monitor.c \
              scale_usage.c \
              schedd_conf.c \
              sgeee.c \
              sge_gdi_attributes.c \
              sge_support.c \
              schedd_message.c \
              sge_orders.c \
              sge_schedd_text.c \
              sge_ssi.c

SCHEDLIB_OBJS = $(SCHEDLIB_SRC:.c=.o)

###############################################################################
# global rules: all, clean, depend, messages
###############################################################################
schedlib: $(SCHEDLIB)

schedlib_clean:
	$(RM) libsched.a libsched$(SHAREDEXT) $(SCHEDLIB_OBJS)

schedlib_depend:
		$(DEPEND) -f$(SCHEDLIB_DIR)/sched_dependencies $(SCHEDLIB_DIR)/*.c

schedlib_messages:
	@echo Creating $@
	@for i in `ls $(SCHEDLIB_DIR)/*.c`; do \
	   $(CC) $(CFLAGS) -DEXTRACT_MESSAGES -E $$i | $(XGETTEXT) - ;\
	done


###############################################################################
# rules to build library
###############################################################################
libsched.a: $(SCHEDLIB_OBJS)
	$(AR) $(ARFLAGS) libsched.a $(SCHEDLIB_OBJS)
	$(RANLIB) libsched.a

libsched$(SHAREDEXT): $(SCHEDLIB_OBJS) $(EVCLIB) $(GDILIB) $(SGEOBJLIB) $(ALLLISTSLIB) $(COMMLIB) $(CULLLIB) $(UTILIB) $(RMONLIB)
	$(SHAREDLD) $(SHARED_LFLAGS) -o libsched$(SHAREDEXT) $(SCHEDLIB_OBJS) -levc -lgdi -lsgeobj -lsgeobjd -lcom -lcull -luti -lrmon $(LIBS) -lc

###############################################################################
# include dependencies for object files generated by sge_depend
###############################################################################
include $(SCHEDLIB_DIR)/sched_dependencies

###############################################################################
# rules to build object codes
###############################################################################
sge_gdi_attributes.o : $(SCHEDLIB_DIR)/sge_gdi_attributes.c
	$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(SCHEDLIB_DIR)/sge_gdi_attributes.c
      
sge_orders.o : $(SCHEDLIB_DIR)/sge_orders.c
	$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(SCHEDLIB_DIR)/sge_orders.c

sge_schedd_text.o:	$(SCHEDLIB_DIR)/sge_schedd_text.c
	$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(SCHEDLIB_DIR)/sge_schedd_text.c

sge_select_queue.o : $(SCHEDLIB_DIR)/sge_select_queue.c
	$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(SCHEDLIB_DIR)/sge_select_queue.c
      
schedd_conf.o : $(SCHEDLIB_DIR)/schedd_conf.c
	$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(SCHEDLIB_DIR)/schedd_conf.c

sge_complex_schedd.o : $(SCHEDLIB_DIR)/sge_complex_schedd.c
	$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(SCHEDLIB_DIR)/sge_complex_schedd.c

sge_job_schedd.o : $(SCHEDLIB_DIR)/sge_job_schedd.c
