proc get_run_level_name { level } {
  
  if { $level >= 400 } {
     return "week"
  }

  if { $level >= 300 } {
     return "day"
  }

  if { $level >= 200 } {
     return "long"
  }

  if { $level >= 100 } {
     return "medium"
  }

  if { $level >= 00 } {
     return "short"
  }
  return ""
}
# time in minutes
proc get_run_level_time { level } {
  
  if { $level >= 400 } {
     return [expr (48 * 60)]
  }

  if { $level >= 300 } {
     return [expr (14 * 60)]
  }

  if { $level >= 200 } {
     return [expr (2 * 60)]
  }

  if { $level >= 100 } {
     return 30
  }

  if { $level >= 00 } {
     return 10
  }
  return 0
}


