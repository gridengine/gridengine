QSTAT_DIR = $(SDIR)/clients/qstat

QSTAT_TARGETS = qstat

QSTAT_SRC = qstat.c

QSTAT_ADD_SRC = \
               qstat_printing.c \
               complex.c \
               show_job.c \
               sge_conf.c \
               sig_handlers.c \
               job.c \
               usage.c sge_options.c

QSTAT_OBJS = $(QSTAT_SRC:.c=.o)

QSTAT_ADD_OBJS = $(QSTAT_ADD_SRC:.c=.o)

QSTAT_ADD_LIBS = -lsched -lgdi $(KRBLIBS) -lcull -lcom -luti -lrmon

QSTAT_LIB_DEPENDS = $(SCHEDLIB) $(GDILIB) $(SECLIBS) $(KRBLIBS) \
	                 $(CULLLIB) $(COMMLIB) $(UTILIB) $(RMONLIB) $(ZLIB)

###############################################################################
# global rules: all, clean, depend, messages
###############################################################################
qstat_clean:
	$(RM) $(QSTAT_TARGETS) $(QSTAT_OBJS)

qstat_depend:
	$(DEPEND) -f$(QSTAT_DIR)/qstat_dependencies $(QSTAT_DIR)/*.c

qstat_messages:
	@echo Creating $@
	@for i in `ls $(QSTAT_DIR)/*.c`; do \
		$(CC) $(CFLAGS) -DEXTRACT_MESSAGES -E $$i | $(XGETTEXT) - ; \
	done


###############################################################################
# rules to build binaries
###############################################################################
qstat: $(QSTAT_OBJS) $(QSTAT_ADD_OBJS) $(QSTAT_LIB_DEPENDS) 
		$(CC) -o $@ $(LFLAGS) $(QSTAT_OBJS) $(QSTAT_ADD_OBJS) $(QSTAT_ADD_LIBS) $(LIBS)

###############################################################################
# include dependencies for object files generated by sge_depend
###############################################################################
include $(QSTAT_DIR)/qstat_dependencies

###############################################################################
# rules to build object codes
###############################################################################
qstat.o: 	$(QSTAT_DIR)/qstat.c
		$(CC) $(CFLAGS) -c $(QSTAT_DIR)/qstat.c
