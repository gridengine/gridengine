     global CHECK_ENABLED_RUNLEVELS CHECK_ENABLED_CATEGORIES CHECK_CHECKTREE_ROOT 
     global CHECK_SGE_DEBUG_LEVEL
     global master_debug schedd_debug do_not_update CHECK_DISPLAY_OUTPUT daemon_debug
