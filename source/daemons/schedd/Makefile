SCHEDD_SDIR = $(SDIR)/daemons/schedd

SCHEDD_TARGETS = sge_schedd sge_share_mon

SCHEDD_SRC  = sge_schedd.c \
             scheduler.c \
             sge_category.c \
             sge_process_events.c \
             interactive_sched.c 

SCHEDD_ADD_SRC = job_log.c \
             category.c \
             read_write_complex.c \
             parse_job_cull.c \
             parse_qsub.c \
             sge_options.c \
             sge_orders.c \
             sge_pe_schedd.c \
             shutdown.c \
             sig_handlers.c \
             unparse_job_cull.c \
             usage.c \
             sge_mt_init.c

SMON_SRC    = sge_share_mon.c

SMON_ADD_SRC = sge_support.c

SCHEDD_OBJS = $(SCHEDD_SRC:.c=.o)

SCHEDD_ADD_OBJS = $(SCHEDD_ADD_SRC:.c=.o) 

SCHEDD_ADD_LIBS = -lsched -lmir -levc -lgdi -lsgeobj -lsgeobjd $(SECLIB) $(KRBLIB) -lcull -lrmon -lcomm -lcommlists -luti -llck $(DLLIB)

SCHEDD_LIB_DEPENDS = $(SCHEDLIB) $(MIRLIB) $(EVCLIB) $(GDILIB) \
                     $(SGEOBJLIB) $(SGEOBJDLIB) \
                     $(SECLIBS) $(KRBLIBS) \
                     $(CULLLIB) $(RMONLIB) $(COMMLIB) $(COMMLISTSLIB) $(UTILIB) $(LCKLIB) $(TPLIB)

SMON_OBJS = $(SMON_SRC:.c=.o)

SMON_ADD_OBJS = $(SMON_ADD_SRC:.c=.o) 

SMON_ADD_LIBS = -lsched -lgdi -lsgeobj -lsgeobjd $(SECLIB) $(KRBLIB) -lcull -lrmon -lcomm -lcommlists -luti -llck $(DLLIB)

SMON_LIB_DEPENDS = $(SCHEDLIB) $(GDILIB) $(SGEOBJLIB) $(SGEOBJDLIB) $(SECLIBS) $(KRBLIBS) $(CULLLIB) $(RMONLIB) $(LCKLIB) $(COMMLIB) $(COMMLISTSLIB) $(UTILIB)

###############################################################################
# global rules: all, clean, depend, messages
###############################################################################
schedd: $(SCHEDD_TARGETS)

schedd_clean:
	$(RM) $(SCHEDD_TARGETS) $(SCHEDD_OBJS) $(SMON_OBJS)

schedd_depend:
	$(DEPEND) -f$(SCHEDD_SDIR)/schedd_dependencies $(SCHEDD_SDIR)/*.c

schedd_messages:
	@echo Creating $@
	@for i in `ls $(SCHEDD_SDIR)/*.c`; do \
	   $(CC) $(CFLAGS) -DEXTRACT_MESSAGES -E $$i | $(XGETTEXT) - ;\
	done

###############################################################################
# rules to build binaries
###############################################################################
sge_schedd: $(SCHEDD_OBJS) $(SCHEDD_ADD_OBJS) $(SCHEDD_LIB_DEPENDS)
	$(LD_WRAPPER) $(CC) -o $@ $(LFLAGS) $(SCHEDD_OBJS) $(SCHEDD_ADD_OBJS) $(SCHEDD_ADD_LIBS) $(SLIBS) $(LIBS)

sge_share_mon: $(SMON_OBJS) $(SMON_ADD_OBJS) $(SMON_LIB_DEPENDS)
	$(LD_WRAPPER) $(CC) -o $@ $(LFLAGS) $(SMON_OBJS) $(SMON_ADD_OBJS) $(SMON_ADD_LIBS) $(SLIBS) $(LIBS)

###############################################################################
# include dependencies for object files generated by sge_depend
###############################################################################
include $(SCHEDD_SDIR)/schedd_dependencies

###############################################################################
# rules to build object codes
###############################################################################
sge_schedd.o:	$(SCHEDD_SDIR)/sge_schedd.c
	$(CC) $(CFLAGS) -c $(SCHEDD_SDIR)/sge_schedd.c

sge_category.o : $(SCHEDD_SDIR)/sge_category.c
	$(CC) $(CFLAGS) -c $(SCHEDD_SDIR)/sge_category.c

sge_process_events.o : $(SCHEDD_SDIR)/sge_process_events.c
	$(CC) $(CFLAGS) -c $(SCHEDD_SDIR)/sge_process_events.c

interactive_sched.o : $(SCHEDD_SDIR)/interactive_sched.c
	$(CC) $(CFLAGS) -c $(SCHEDD_SDIR)/interactive_sched.c


# -------------------------------------------------
# this modules belong into a scheduling library
# for being accessable from qmaster, qstat, qmon and may be others
# there are still some ugly dependencies (read_write_complex.c)

sge_share_mon.o: $(SCHEDD_SDIR)/sge_share_mon.c
	$(CC) $(CFLAGS) -c $(SCHEDD_SDIR)/sge_share_mon.c

# ------------- different scheduling algorithms ----------
scheduler.o : $(SCHEDD_SDIR)/scheduler.c
	$(CC) $(CFLAGS) -c $(SCHEDD_SDIR)/scheduler.c

