# Define the global veriables to give them back
global check_name check_description check_needs check_functions check_errno check_errstr check_highest_level
global check_init_level_procedure check_category
global check_root_access_needs

set check_init_level_procedure "issue_1768_init_level"

set check_category            "COMPATIBILITY SYSTEM VERIFIED"
set check_name                "issue_1768"
set check_description(0)      "quotes in qtask file can cause DRMAA app to segfault"
set check_needs               "init_core_system"      ;# dependencies of this check (name of other check)
set check_root_access_needs   "no"

# setup and cleanup functions
set check_setup_function   issue_1768_setup
set check_cleanup_function issue_1768_cleanup

# define test's procedure order
set check_functions           ""
lappend check_functions       "issue_1768_run"   ;# functions to call (in order)
set check_highest_level       0

global issue_1768_stored_qtask_file

proc issue_1768_init_level {} {
   global CHECK_ACT_LEVEL ts_config

   # setup levels 
   switch -- $CHECK_ACT_LEVEL {
      "0"  { 
         return 0
      }
   }

   return -1
}

proc issue_1768_setup {} {
   global ts_config CHECK_USER CHECK_HOST issue_1768_stored_qtask_file

   set pid [pid]
   set cat "issue1768cat$pid"
   set qtask "$ts_config(product_root)/$ts_config(cell)/common/qtask"
   set issue_1768_stored_qtask_file [get_tmp_file_name]

   set error [ catch {
      file copy $qtask $issue_1768_stored_qtask_file
      set f [open $qtask a]
      puts $f "$cat -N \"two words\" -N \"three . words\""
      close $f
   } message ]

   if {$error != 0} {
      add_proc_error "issue_1768_setup" -1 "failed setting up qtask file: $message"
   }
   set_error 0 "ok"
}

proc issue_1768_cleanup {} {
   global ts_config CHECK_USER CHECK_HOST CHECK_PRODUCT_ROOT issue_1768_stored_qtask_file

   set pid [pid]
   set qtask "$CHECK_PRODUCT_ROOT/$ts_config(cell)/common/qtask"

   set error [ catch {
      file copy -force $issue_1768_stored_qtask_file $qtask
   } message ]

   if {$error != 0} {
      add_proc_error "issue_1768_cleanup" -1 "failed restoring qtask file: $message"
   }
   set_error 0 "ok"
}

proc issue_1768_run  {} {
   global ts_config CHECK_USER CHECK_HOST CHECK_PRODUCT_ROOT

   # Run test binary
   set failed 0
   set pid [pid]
   set cat "issue1768cat$pid"

   foreach host $ts_config(unique_arch_nodes) {
      set up_arch [resolve_build_arch $host]
      set client_binary "$ts_config(source_dir)/$up_arch/test_drmaa_issue1768"

      if {[wait_for_remote_file $host $CHECK_USER $client_binary 1 0] != 0} {
         add_proc_error "issue_1768_run" -3 "test binary $client_binary doesn't exist on host $host"
         continue
      } else {
         set output [start_remote_prog $host $CHECK_USER $client_binary "/bin/date $cat"]
         # If we segfault on any architecture, the bug still exists.
         if {$prg_exit_state != 0} {
            add_proc_error "issue_1768_run" -1 "test binary $client_binary failed on host $host:\n$output"
         }
      }   
   }

   set_error 0 "ok"
}
